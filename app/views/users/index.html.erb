        function sortTable(key) {
            // 1. è·å–è¯¥åˆ—å½“å‰çŠ¶æ€å¹¶åè½¬
            let currentDir = sortStates[key];
            let newDir = (currentDir === 'asc') ? 'desc' : 'asc';
            
