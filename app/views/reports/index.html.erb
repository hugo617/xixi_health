        function openEdit(id) {
            const item = reports.find(r => r.id === id);
            if(!item) return;
            document.getElementById('editId').value = item.id;
            document.getElementById('editUser').value = item.username;
            document.getElementById('editEmail').value = item.email;
            document.getElementById('editStatus').value = item.status;
            document.getElementById('editModal').classList.add('show');
        }

        document.getElementById('editForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const id = parseInt(document.getElementById('editId').value);
            const idx = reports.findIndex(r => r.id === id);
            if(idx !== -1) {
                reports[idx].username = document.getElementById('editUser').value;
                reports[idx].email = document.getElementById('editEmail').value;
                reports[idx].status = document.getElementById('editStatus').value;
                closeModal('editModal');
                handleSearch();
            }
        });
